<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

   	<appender name  = "testXMLInit_appender" 
              class = "toolbox.log4j.im.InstantMessengerAppender">

		<param name="Messenger" value="AOL"/>
    	<param name="Username"  value="supahfuzzy"/>
    	<param name="Password"  value="techno"/>
    	<param name="Recipient" value="analogue"/>
    	<param name="Throttle"  value="1000"/>
	   
   	</appender>

    <logger name="testXMLInit_logger" additivity="true">
