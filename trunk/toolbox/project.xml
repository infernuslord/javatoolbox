  <!-- ===================================================================== -->
  <!-- BUILD                                                                 -->
  <!-- ===================================================================== -->
  
  <build>
    <nagEmailAddress>analogue@yahoo.com</nagEmailAddress>
    <sourceDirectory>src</sourceDirectory>
    <unitTestSourceDirectory>test</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>
    <aspectSourceDirectory/>
  
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <!--include>toolbox/junit/CloverTestSuite.java</include-->
      </includes>
      
      <excludes>
        
        <exclude>**/RepositoryTest.java</exclude>
        <exclude>**/ui/**/*Test.java</exclude>
        <exclude>**/SwingUtilTest.java</exclude>
        <exclude>**/jedit/**</exclude>
        <exclude>**/log4j/im/**/*Test.java</exclude>
        <exclude>**/BannerTaskTest.java</exclude>
        <exclude>**/DecompilerTest.java</exclude>
        
      </excludes>
      
      <resources>
        <resource>
          <directory>${basedir}/resources</directory>
          <!--
          <includes>
            <include>**/test/**</include>
          </includes>
          -->
        </resource>
        
        <!--
        <resource>
          <directory>${basedir}/debug</directory>
          <includes>
            <include>**/*</include>
          </includes>
        </resource>
        -->
        
      </resources>
    </unitTest>
    
    <resources>
      <resource>
        <directory>${basedir}/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <!--
        <excludes>
          <exclude>**/test/**</exclude>
        </excludes>
        -->
      </resource>
    </resources>
  </build>
  
